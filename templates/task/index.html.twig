
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des tâches</h1>
    <a href="{{ path('task_new') }}">Créer une nouvelle tâche</a>
    <ul>
        {% for task in tasks %}
            <li>
                <strong>{{ task.title }}</strong> - {{ task.description }}
                {% if task.isCompleted %}
                    <span style="color: green;">[Terminé]</span>
                {% else %}
                    <span style="color: red;">[En cours]</span>
                {% endif %}
                <a href="{{ path('task_edit', {id: task.id}) }}">Modifier</a>
                <form method="post" action="{{ path('task_delete', {id: task.id}) }}" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                    <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');">Supprimer</button>
                </form>
            </li>
        {% endfor %}
    </ul>
{% endblock %}

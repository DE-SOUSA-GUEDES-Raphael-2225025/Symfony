{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-xl rounded-lg border border-gray-200">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Créer une nouvelle tâche</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div class="space-y-4">
            {{ form_widget(form) }}
        </div>

        <button type="submit"
                class="mt-4 w-full bg-blue-600 text-white py-2 px-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition duration-300 shadow-md">
            ➕ Créer
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}
